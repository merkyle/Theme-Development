<div class="fashion-hero-wrapper" id="fashion-hero-{{ section.id }}">
  <div class="fashion-hero-container">
    <!-- Hero Section -->
    <div class="fashion-hero-section">
      <!-- Sale Badge -->
      {% if section.settings.sale_badge_text != blank %}
        <div class="fashion-sale-badge">{{ section.settings.sale_badge_text }}</div>
      {% endif %}

      <!-- Main Heading -->
      {% if section.settings.main_heading != blank %}
        <h1 class="fashion-main-heading">{{ section.settings.main_heading }}</h1>
      {% endif %}

      <!-- Subtitle -->
      {% if section.settings.subtitle != blank %}
        <p class="fashion-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      <!-- Carousel Dots -->
      <div class="fashion-carousel-dots">
        {% for i in (1..3) %}
          <div class="fashion-dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></div>
        {% endfor %}
      </div>

      <!-- Product Image -->
      {% if section.settings.hero_image != blank %}
        <div class="fashion-product-image">
          {{ section.settings.hero_image | image_url: width: 400 | image_tag: 
             alt: section.settings.hero_image.alt | default: 'Fashion products',
             loading: 'lazy',
             class: 'fashion-hero-img' }}
        </div>
      {% endif %}
    </div>

    <!-- Category Navigation -->
    <div class="fashion-category-nav">
      <div class="fashion-category-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'category_item' %}
              <a href="{{ block.settings.category_url | default: '#' }}" 
                 class="fashion-category-item" 
                 data-category="{{ block.settings.category_handle }}"
                 {% if block.settings.category_url == blank %}onclick="return false;"{% endif %}>
                <div class="fashion-category-icon">
                  {% case block.settings.icon_type %}
                    {% when 't-shirt' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23Z"/>
                      </svg>
                    {% when 'jacket' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 7V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3"/>
                        <path d="M4 7h16l-2 13H6L4 7Z"/>
                        <path d="M9 7v0a3 3 0 0 1 6 0v0"/>
                      </svg>
                    {% when 'shirt' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.38 3.46 16 2a4 4 0 0 1-8 0L3.62 3.46a2 2 0 0 0-1.34 2.23l.58 3.47a1 1 0 0 0 .99.84H6v10c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V10h2.15a1 1 0 0 0 .99-.84l.58-3.47a2 2 0 0 0-1.34-2.23Z"/>
                      </svg>
                    {% when 'jeans' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M8 2v20l-6-6V6a4 4 0 0 1 4-4Z"/>
                        <path d="M16 8v14l6-6V6a4 4 0 0 0-4-4h-2Z"/>
                      </svg>
                    {% when 'bag' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/>
                        <path d="M3 6h18"/>
                        <path d="M16 10a4 4 0 0 1-8 0"/>
                      </svg>
                    {% when 'shoes' %}
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 16v-2.38C4 11.5 2.97 10.5 3 8c.03-2.72 1.49-6 4.5-6C9.37 2 10 4.8 10 7c0 1.5 0 2 0 2h4s0-.5 0-2c0-2.2.63-5 2.5-5 3.01 0 4.47 3.28 4.5 6 .03 2.5-1 4.5-1 6.62V16l-4 4H8l-4-4Z"/>
