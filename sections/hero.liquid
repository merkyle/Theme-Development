<style>
  #fashion-hero-{{ section.id }} * {
    box-sizing: border-box;
  }

  #fashion-hero-{{ section.id }} .fashion-hero-wrapper {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background-color: {{ section.settings.background_color | default: '#f8f9fa' }};
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    margin: {{ section.settings.section_margin_top }}px 0 {{ section.settings.section_margin_bottom }}px 0;
  }

  #fashion-hero-{{ section.id }} .fashion-hero-container {
    width: 100%;
    max-width: {{ section.settings.max_width | default: 400 }}px;
    background: {{ section.settings.container_background | default: '#ffffff' }};
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  /* Hero Section */
  #fashion-hero-{{ section.id }} .fashion-hero-section {
    position: relative;
    background: {{ section.settings.hero_background | default: '#f8f9fa' }};
    padding: 32px 24px;
    border-radius: 0 0 24px 24px;
    min-height: 280px;
  }

  #fashion-hero-{{ section.id }} .fashion-sale-badge {
    font-size: 14px;
    color: {{ section.settings.badge_color | default: '#6b7280' }};
    margin-bottom: 8px;
    font-weight: 500;
  }

  #fashion-hero-{{ section.id }} .fashion-main-heading {
    font-size: {{ section.settings.heading_size | default: 28 }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color | default: '#111827' }};
    line-height: 1.2;
    margin-bottom: 12px;
  }

  #fashion-hero-{{ section.id }} .fashion-subtitle {
    color: {{ section.settings.subtitle_color | default: '#6b7280' }};
    font-size: 16px;
    margin-bottom: 24px;
    font-weight: 400;
  }

  #fashion-hero-{{ section.id }} .fashion-carousel-dots {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
  }

  #fashion-hero-{{ section.id }} .fashion-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #d1d5db;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  #fashion-hero-{{ section.id }} .fashion-dot.active {
    background-color: {{ section.settings.dot_active_color | default: '#111827' }};
    animation: fashion-pulse 2s infinite;
  }

  #fashion-hero-{{ section.id }} .fashion-dot:hover {
    background-color: #9ca3af;
  }

  #fashion-hero-{{ section.id }} .fashion-product-image {
    position: absolute;
    right: 16px;
    top: 16px;
    bottom: 16px;
    width: 192px;
  }

  #fashion-hero-{{ section.id }} .fashion-hero-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: right;
  }

  /* Category Navigation */
  #fashion-hero-{{ section.id }} .fashion-category-nav {
    padding: 24px 16px;
  }

  #fashion-hero-{{ section.id }} .fashion-category-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns | default: 5 }}, 1fr);
    gap: 16px;
  }

  #fashion-hero-{{ section.id }} .fashion-category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 12px;
    background: none;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 80px;
    text-decoration: none;
    color: inherit;
  }

  #fashion-hero-{{ section.id }} .fashion-category-item:hover {
    background-color: {{ section.settings.category_hover_bg | default: '#f8f9fa' }};
    transform: translateY(-2px);
    text-decoration: none;
    color: inherit;
  }

  #fashion-hero-{{ section.id }} .fashion-category-item:active {
    transform: translateY(0);
  }

  #fashion-hero-{{ section.id }} .fashion-category-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.icon_color | default: '#374151' }};
  }

  #fashion-hero-{{ section.id }} .fashion-category-icon svg {
    width: 24px;
    height: 24px;
  }

  #fashion-hero-{{ section.id }} .fashion-category-label {
    font-size: 12px;
    color: {{ section.settings.label_color | default: '#374151' }};
    font-weight: 500;
    text-align: center;
    line-height: 1.2;
  }

  /* Animations */
  @keyframes fashion-pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }

  @keyframes fashion-ripple {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0;
    }
  }

  #fashion-hero-{{ section.id }} .fashion-active-category {
    background-color: #e5e7eb !important;
    transform: translateY(-2px) !important;
  }

  #fashion-hero-{{ section.id }} .fashion-active-category .fashion-category-icon {
    color: #111827 !important;
  }

  #fashion-hero-{{ section.id }} .fashion-active-category .fashion-category-label {
    color: #111827 !important;
    font-weight: 600 !important;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    #fashion-hero-{{ section.id }} .fashion-hero-container {
      max-width: 100%;
      margin: 0;
      border-radius: 0;
    }
    
    #fashion-hero-{{ section.id }} .fashion-hero-section {
      border-radius: 0;
      padding: 24px 20px;
    }
    
    #fashion-hero-{{ section.id }} .fashion-main-heading {
      font-size: 24px;
    }
    
    #fashion-hero-{{ section.id }} .fashion-product-image {
      width: 160px;
      right: 12px;
      top: 12px;
      bottom: 12px;
    }
    
    #fashion-hero-{{ section.id }} .fashion-category-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }
    
    #fashion-hero-{{ section.id }} .fashion-category-item {
      padding: 8px;
      min-height: 70px;
    }
    
    #fashion-hero-{{ section.id }} .fashion-category-label {
      font-size: 11px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = 'fashion-hero-{{ section.id }}';
    const section = document.getElementById(sectionId);
    
    if (!section) return;
    
    // Carousel dots functionality
    const dots = section.querySelectorAll('.fashion-dot');
    let currentSlide = 0;
    
    function rotateDots() {
      dots.forEach(dot => dot.classList.remove('active'));
      if (dots[currentSlide]) {
        dots[currentSlide].classList.add('active');
      }
      currentSlide = (currentSlide + 1) % dots.length;
    }
    
    // Auto-rotate every 3 seconds
    if (dots.length > 0) {
      setInterval(rotateDots, 3000);
      
      // Manual dot clicking
      dots.forEach((dot, index) => {
        dot.addEventListener('click', function() {
          currentSlide = index;
          dots.forEach(d => d.classList.remove('active'));
          this.classList.add('active');
        });
      });
    }
    
    // Category item interactions
    const categoryItems = section.querySelectorAll('.fashion-category-item');
    
    categoryItems.forEach(item => {
      item.addEventListener('click', function(e) {
        const category = this.getAttribute('data-category');
        
        // If no URL is set, prevent default and show selection
        if (this.getAttribute('href') === '#') {
          e.preventDefault();
          
          // Remove active state from all items
          categoryItems.forEach(cat => cat.classList.remove('fashion-active-category'));
          
          // Add active state to clicked item
          this.classList.add('fashion-active-category');
          
          // Add ripple effect
          createRipple(this);
          
          // Track category selection for analytics
          if (typeof gtag !== 'undefined') {
            gtag('event', 'category_click', {
              'category_name': category,
              'section_id': '{{ section.id }}'
            });
          }
          
          // Shopify Analytics
          if (typeof ShopifyAnalytics !== 'undefined') {
            ShopifyAnalytics.track('Category Selected', {
              category: category,
              section: 'fashion-hero'
            });
          }
        }
      });
      
      // Hover effects
      item.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-2px) scale(1.02)';
      });
      
      item.addEventListener('mouseleave', function() {
        if (!this.classList.contains('fashion-active-category')) {
          this.style.transform = 'translateY(0) scale(1)';
        }
      });
    });
    
    // Ripple effect function
    function createRipple(element) {
      const ripple = document.createElement('div');
      ripple.style.cssText = `
        position: absolute;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.1);
        animation: fashion-ripple 0.6s ease-out;
        pointer-events: none;
        width: 40px;
        height: 40px;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      `;
      
      element.style.position = 'relative';
      element.style.overflow = 'hidden';
      element.appendChild(ripple);
      
      setTimeout(() => {
        ripple.remove();
      }, 600);
    }
    
    // Image loading animation
    const heroImg = section.querySelector('.fashion-hero-img');
    if (heroImg) {
      heroImg.addEventListener('load', function() {
        this.style.opacity = '0';
        this.style.transform = 'translateX(20px)';
        this.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        
        setTimeout(() => {
          this.style.opacity = '1';
          this.style.transform = 'translateX(0)';
        }, 100);
      });
    }
    
    // Intersection Observer for animations
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('fashion-animate-in');
          }
        });
      }, { threshold: 0.1 });
      
      observer.observe(section);
    }
  });
</script>

